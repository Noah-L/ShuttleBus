<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#be573f"
    tools:context="com.oocl.test.TicketActivity">

    <LinearLayout
        android:id="@+id/ticket1"
        android:layout_width="fill_parent"
        android:layout_weight="20"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="OOCL Shuttle Bus Ticket"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/nameOfFirstTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:text="姓名 : Elsa"/>

        <TextView
            android:id="@+id/routeOfFirstTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textSize="17sp"
            android:text="路线 : 上班No.1"/>

        <TextView
            android:id="@+id/stopOfFirstTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textSize="17sp"
            android:text="站点 : 海怡湾畔"/>

        <TextView
            android:id="@+id/typeOfFirstTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textSize="17sp"
            android:text="类型 : 长期预定"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ticket2"
        android:layout_width="fill_parent"
        android:layout_weight="20"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="OOCL Shuttle Bus Ticket"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/nameOfSecondTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:text="姓名 : Elsa"/>

        <TextView
            android:id="@+id/routeOfSecondTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textSize="17sp"
            android:text="路线 : 下班No.10"/>

        <TextView
            android:id="@+id/stopOfSecondTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textSize="17sp"
            android:text="站点 : 海怡湾畔"/>

        <TextView
            android:id="@+id/typeOfSecondTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textSize="17sp"
            android:text="类型 : 临时预定 2016.1.8"/>
    </LinearLayout>


</LinearLayout>
